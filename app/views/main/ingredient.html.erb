<section id="main">
  <header>
    <h2>選擇你要的食材</h2>
    <% if flash[:no_recipe]%>
      <div class="notice" ><%= flash[:no_recipe] %></div>
    <% end %>
    <div>
      <p>您冰箱裡的食材有</p>
    </div>
      <%= form_for @recipe, :url => recipes_search_path do |r| %>
        <%= r.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :name) %>
        <div><%= r.submit "送出", :class => "button special" %></div>
      <% end %>
  </header>
</section>

<script>
  $(function() {
    $("input[name='recipe[ingredient_ids][]'][type='hidden']").remove()
  });
</script>